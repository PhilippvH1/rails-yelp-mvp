<h1 class="text-center">Your restaurants</h1>
<ul>
  <% @restaurants.each do |restaurant| %>
<div class="product">
  <div class='product-body'>
    <h3>
      <%= restaurant.name %>
    </h3>
    <p>
      <%= restaurant.address %>
    </p>
  </div>
  <ul class="list-inline product-controls ">
    <li><%= link_to 'Details', restaurant_path(restaurant), class: "btn btn-primary" %></li>

  </ul>
</div>
  <% end %>
</ul>
